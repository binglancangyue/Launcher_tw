    <androidx.constraintlayout.widget.ConstraintLayout style="@style/SettingsRowLayoutStyle">

        <TextView
            android:id="@+id/tv_limit_title"
            style="@style/SettingsTitleStyle"
            android:text="@string/adas_speeding_warning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rb_limit_close"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rb_limit_close"
            style="@style/RadioButtonStyle"
            android:layout_marginTop="12dp"
            android:text="@string/adas_switch_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rb_limit_0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_limit_title" />

        <RadioButton
            android:id="@+id/rb_limit_0"
            style="@style/RadioButtonStyle"
            android:layout_gravity="center"
            android:text="@string/adas_switch_original"
            app:layout_constraintBottom_toBottomOf="@id/rb_limit_close"
            app:layout_constraintEnd_toStartOf="@id/rb_limit_5"
            app:layout_constraintStart_toEndOf="@id/rb_limit_close"
            app:layout_constraintTop_toTopOf="@id/rb_limit_close" />

        <RadioButton
            android:id="@+id/rb_limit_5"
            style="@style/RadioButtonStyle"
            android:layout_gravity="center"
            android:text="@string/adas_switch_speed_5"
            app:layout_constraintBottom_toBottomOf="@id/rb_limit_close"
            app:layout_constraintEnd_toStartOf="@id/rb_limit_10"
            app:layout_constraintStart_toEndOf="@id/rb_limit_0"
            app:layout_constraintTop_toTopOf="@id/rb_limit_close" />

        <RadioButton
            android:id="@+id/rb_limit_10"
            style="@style/RadioButtonStyle"
            android:layout_gravity="end"
            android:text="@string/adas_switch_speed_10"
            app:layout_constraintBottom_toBottomOf="@id/rb_limit_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rb_limit_5"
            app:layout_constraintTop_toTopOf="@id/rb_limit_close" />
    </androidx.constraintlayout.widget.ConstraintLayout>
