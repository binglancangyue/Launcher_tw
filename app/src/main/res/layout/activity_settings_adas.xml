    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_linearlayout_divider_v" />

    <LinearLayout
        style="@style/SettingsRowLayoutStyle"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsTitleStyle"
            android:text="@string/adas_driving_detection" />

        <Switch
            android:id="@+id/switch_driving_detection"
            style="@style/SwitchStyle"
            android:layout_marginStart="@dimen/itemVertical" />
    </LinearLayout>

    <LinearLayout
        style="@style/SettingsRowLayoutStyle"
        android:gravity="center_vertical">

        <TextView
            style="@style/SettingsTitleStyle"
            android:text="@string/adas_warning_interval" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_warning_interval_close"
                style="@style/RadioButtonStyle"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/warning_interval_close" />

            <RadioButton
                android:id="@+id/rb_warning_interval_5"
                style="@style/RadioButtonStyle"
                android:layout_centerInParent="true"
                android:text="@string/warning_interval_5" />

            <RadioButton
                android:id="@+id/rb_warning_interval_10"
                style="@style/RadioButtonStyle"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/warning_interval_10" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/SettingsRowLayoutStyle"
        android:gravity="center_vertical">

        <TextView
            style="@style/SettingsTitleStyle"
            android:text="@string/adas_warning_mode" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_warning_mode_wisdom"
                style="@style/RadioButtonStyle"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/warning_mode_wisdom" />

            <RadioButton
                android:id="@+id/rb_warning_mode_picture_flickers"
                style="@style/RadioButtonStyle"
                android:layout_centerInParent="true"
                android:text="@string/warning_mode_picture_flickers" />

            <RadioButton
                android:id="@+id/rb_warning_mode_beep"
                style="@style/RadioButtonStyle"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/warning_mode_beep" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>