<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SettingsItemStyle"
    android:orientation="vertical">

    <LinearLayout
        style="@style/SettingsRowLayoutStyle"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsTitleStyle"
            android:text="@string/adas_speed_warning" />

        <Switch
            android:id="@+id/switch_speed"
            style="@style/SwitchStyle"
            android:layout_marginStart="@dimen/itemVertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_linearlayout_divider_v" />

